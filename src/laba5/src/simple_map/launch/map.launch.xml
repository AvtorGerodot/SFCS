<?xml version="1.0"?>
<launch>
    <!-- Загрузка Stage Robots World -->
    <include file="$(find-pkg-share stage_ros2)/launch/stage.launch.py">
        <arg name="world_file" value="$(find-pkg-share simple_map)/worlds/task1.world"/>
    </include>

    <!-- Пространство картирования (пример) -->
    <node pkg="simple_map" exec="simple_map_node" name="map" output="screen">
        <param name="use_sim_time" value="true"/>
        <remap from="scan" to="base_scan"/>
    </node>

    <!-- Контроллер движения (пример) -->
    <node pkg="control_selector" exec="control_selector" name="control" output="screen">
        <param name="use_sim_time" value="true"/>
        <param name="min_range" value="1.0"/>
        <param name="max_vel" value="1.0"/>
        <param name="max_omega" value="0.5"/>
        <param name="angle" value="30.0"/>
        <param name="k_omega" value="20.0"/>
        <param name="k_vel" value="0.01"/>
        <remap from="scan" to="base_scan"/>
        <remap from="pose" to="base_pose_ground_truth"/>
    </node>
</launch>
